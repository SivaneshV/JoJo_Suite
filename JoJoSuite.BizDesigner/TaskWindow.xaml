            </Grid>




        </WrapPanel>

        <WrapPanel Margin="-2,55,2,-25">
            <Label x:Name="label1" Content="Name :" Width="85"  HorizontalAlignment="Left" Margin="15 5 5 5" />
            <TextBox x:Name="txt_name" Width="400" Margin="5 5"/>
