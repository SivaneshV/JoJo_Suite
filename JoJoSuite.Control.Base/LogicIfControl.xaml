<UserControl x:Class="JoJoSuite.Control.Base.LogicIfControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JoJoSuite.Control.Base"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">

    <Canvas x:Name="canvasMain">

        <Polygon Points="25,0 0,25 25,50 50,25" Stretch="Fill" Fill="WhiteSmoke" Stroke="Silver" StrokeThickness="1" Height="100" Width="100" Canvas.Left="0" Canvas.Top="0"/>

        <Button Canvas.Left="14" Canvas.Top="41" x:Name="btnSetting" Background="{x:Null}" BorderThickness="0">
            <Image Height="16" Width="16" Source="Images/2/settings.ico" />
        </Button>

        <Button Canvas.Left="67" Canvas.Top="41" x:Name="btnRemove" Background="{x:Null}" BorderThickness="0">
            <Image Height="16" Width="16" Source="Images/2/delete.ico" />
        </Button>


    </Canvas>
</UserControl>
